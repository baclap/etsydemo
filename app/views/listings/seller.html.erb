<table id="seller_table" class="table table-striped table-bordered">
    <tr>
        <th class="col-md-1">Image</th>
        <th class="col-md-1">Name</th>
        <th class="col-md-8">Description</th>
        <th class="col-md-1">Price</th>
        <th class="col-md-1">Actions</th>
    </tr>
    <% @listings.each do |listing| %>
        <tr>
            <td>
                <%= image_tag listing.image.url(:thumb) %>
            </td>
            <td>
                <%= listing.name %>
            </td>
            <td class="description">
                <%= listing.description %>
            </td>
            <td>
                <%= number_to_currency(listing.price) %>
            </td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        Action <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><%= link_to 'View', listing %></li>
                        <li><%= link_to 'Edit', edit_listing_path(listing) %></li>
                        <li><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                    </ul>
                </div>
            </td>
        </tr>
    <% end %>
</table>

<br>

<% if user_signed_in? %>
    <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
