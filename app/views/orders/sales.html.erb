<h2 class="text-center">Your Sales History</h2>

<table id="seller_table" class="table table-striped table-bordered">
    <tr>
        <th class="col-md-4">Image</th>
        <th class="col-md-2">Item</th>
        <th class="col-md-2">Price</th>
        <th class="col-md-2">Customer</th>
        <th class="col-md-2">Date Sold</th>
    </tr>
    <% @orders.each do |order| %>
        <tr>
            <td>
                <%= image_tag order.listing.image.url(:medium) %>
            </td>
            <td>
                <%= order.listing.name %>
            </td>
            <td>
                <%= number_to_currency(order.listing.price) %>
            </td>
            <td>
                <%= order.buyer.name %>
            </td>
            <td>
                <%= order.created_at.strftime("%B %-d %Y") %>
            </td>
        </tr>
    <% end %>
</table>

<br>

<% if user_signed_in? %>
    <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
